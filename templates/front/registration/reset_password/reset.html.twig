{% extends 'front/base.html.twig' %}
{% set titlePage = "Réinitialisation de votre mot de passe" %}

{% block title %}{{ titlePage }}{% endblock %}


{% block stylesheets %}
	<link rel='stylesheet' href='{{ asset('assets/css/pages/reset-password/reset.css') }}'>
{% endblock %}

{% block body %}

	<section id='reset-password-section'>
		<div class='section-container'>
			<div id='reset-password'>
				<div class='reset-password-title'>
					<h1>{{ titlePage }}</h1>
				</div>

	
				<div class='reset-password-content'>
					{{ form_start(resetForm) }}
                        <div class='form-row'>
							{{ form_widget(resetForm.plainPassword) }}
						</div>
						<div class='form-submit'>
							<button class="btn btn-primary">Je réinitialise mon mot de passe</button>
						</div>
					{{ form_end(resetForm) }}
				</div>
			</div>
		</div>
	</section>
	
{% endblock %}